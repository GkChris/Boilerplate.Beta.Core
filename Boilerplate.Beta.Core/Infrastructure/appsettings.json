{
  "ConnectionStrings": {
    "DefaultConnection": "Server=postgres;Port=5432;Database=your_database;User Id=user;Password=password;"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",

  "AppSettings": {
    "ApplicationUrl": "http://core:80",
    "ApiBaseUrl": "http://core:80",
    "PageSize": 10
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://frontend:3000",
      "https://app.example.com"
    ]
  },

  "Swagger": {
    "Title": "My API",
    "Version": "v1",
    "Description": "API documentation for My API",
    "Contact": {
      "Name": "Your Name",
      "Email": "your.email@example.com",
      "Url": "https://example.com"
    }
  },

  "MetaData": {
    "ApplicationName": "App name"
  },

  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Topics": [ "example-topic-1", "example-topic-2" ],
    "GroupId": "example-consumer-group"
  },

  "InfrastructureSettings": {
    "AutoApplyMigrations": true,
    "EnableCustomLoggingMiddleware": true,
    "LogExceptionStackTrace": false,
    "EnableRateLimiting": true,
    "RequestTimeoutSeconds": 30,
    "DefaultPolicyName": "default",
    "DefaultPolicy": {
      "PermitLimit": 100,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 4,
      "QueueLimit": 2,
      "Description": "Standard endpoints - 100 req/min, 2-request queue"
    },
    "StrictPolicy": {
      "PermitLimit": 30,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 4,
      "QueueLimit": 0,
      "Description": "Critical endpoints (auth, payments) - 30 req/min, no queue"
    },
    "LenientPolicy": {
      "PermitLimit": 500,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 4,
      "QueueLimit": 5,
      "Description": "Public endpoints - 500 req/min, 5-request queue"
    }
  },

  "AuthSettings": {
    "Authority": "http://fusionauth:9011",
    "Audience": "your-client-id-here",
    "ClientId": "your-client-id-here",
    "ClientSecret": "your-client-secret-here",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "RoleClaim": "roles",
    "ClientName": "FusionAuth",

    "TokenEndpoint": "/oauth2/token",
    "UserInfoEndpoint": "/oauth2/userinfo",
    "IntrospectEndpoint": "/oauth2/introspect",
    "LogoutEndpoint": "/oauth2/logout?client_id=<your-client-id-here>",

    "AcceptTokenFromCookie": true,
    "AcceptTokenFromHeader": true
  }
}